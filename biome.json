{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"ignore": [
			"./**/node_modules",
			".wrangler",
			"backend/worker-configuration.d.ts",
			"frontend/dist"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"./**/node_modules",
			".wrangler",
			"backend/worker-configuration.d.ts",
			"frontend/dist"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
